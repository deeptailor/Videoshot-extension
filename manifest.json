{
  "manifest_version": 2,

  "name": "Videoshot",
  "description": "Take a video screen shot of the current window in full 1080p resolution",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "record-black.png"
  },

  "icons": {
    "128": "record-black.png"
  },

  "permissions": [
    "tabs",
    "tabCapture",
    "downloads"
  ]
}
